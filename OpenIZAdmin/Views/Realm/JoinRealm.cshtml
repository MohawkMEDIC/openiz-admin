@model OpenIZAdmin.Models.RealmModels.JoinRealmModel
@{
    ViewBag.Title = Locale.JoinRealm;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.JoinRealm</span>
    </div>
    <div class="panel panel-body panel-default">
        @using (Html.BeginForm("JoinRealm", "Realm", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", title = Locale.ToolTip_JoinRealm_Address })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    <span class="help-block">Example: http://localhost:8080 </span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApplicationId, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.ApplicationId, new { @class = "form-control", title = Locale.ToolTip_JoinRealm_AppId })
                    @Html.ValidationMessageFor(m => m.ApplicationId, "", new { @class = "text-danger" })
                    <span class="help-block">Example: org.openiz.example </span>
                </div>
            </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ApplicationSecret, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ApplicationSecret, new { @class = "form-control", title = Locale.ToolTip_JoinRealm_AppSecret })
                        @Html.ValidationMessageFor(m => m.ApplicationSecret, "", new { @class = "text-danger" })
                        <span class="help-block">Example: BEAFE87B-D7BA-46BE-A535-A3685FA1DA92 </span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", title = Locale.ToolTip_Username })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", title = Locale.ToolTip_Password })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Join Realm" class="btn btn-primary" title="@Locale.ToolTip_Submit" />
                    </div>
                </div>}
    </div>
</div>