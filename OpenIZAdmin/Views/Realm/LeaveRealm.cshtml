@model OpenIZAdmin.Models.RealmModels.LeaveRealmModel
@{
    ViewBag.Title = Locale.LeaveRealm;
}

@Html.Partial("_CurrentRealmPartial", Model.CurrentRealm)

<div class="panel panel-default">
    <div class="panel panel-heading">
        @Locale.LeaveRealm
    </div>
    <div class="panel panel-body panel-default">
        @using (Html.BeginForm("LeaveRealm", "Realm", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.CurrentRealm.Id, new { @class = "form-control" })

            <div class="form-group">
                <div class="col-md-10">
                    @Locale.LeaveRealmPrompt
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <a href="/Realm" class="btn btn-default" title="@Locale.ToolTip_Cancel">Cancel</a>
                    <input type="submit" value="Leave Realm" class="btn btn-danger" title="@Locale.ToolTip_Submit">
                </div>
            </div>}
    </div>

</div>