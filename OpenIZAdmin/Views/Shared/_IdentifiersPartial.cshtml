@model IEnumerable<OpenIZAdmin.Models.EntityIdentifierModels.EntityIdentifierViewModel>
@{
    ViewBag.Title = Locale.Identifiers;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.Identifiers</span>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered" id="identifiersTable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@Html.DisplayNameFor(m => m.Name)</th>
                                <th>@Html.DisplayNameFor(m => m.Type)</th>
                                <th>@Html.DisplayNameFor(m => m.Value)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="glyphicon glyphicon-info-sign"></span></td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>@item.Value</td>
                                </tr>}

                        </tbody>
                    </table>}
                else
                {
                    <p>@Locale.NoAssociatedIdentifiers</p>}
            </div>

        </div>
    </div>
</div>
