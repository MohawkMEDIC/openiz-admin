@model IEnumerable<OpenIZAdmin.Models.CodeSystem.CodeSystemViewModel>
@{
    ViewBag.Title = Locale.CodeSystem;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.CodeSystem</span>
    </div>
    <div class="panel panel-body">

        @if (Model.Any())
        {
            <table class="table" id="codeSystemTable">                
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>                        
                        <th>@Html.DisplayNameFor(m => m.Version)</th>
                        <th>@Html.DisplayNameFor(m => m.Domain)</th>
                        <th>@Html.DisplayNameFor(m => m.Url)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                            
                            <td>@item.Name</td>
                            <td>@item.Version</td>
                            <td>@item.Domain</td>
                            <td>@item.Url</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoDataAvailable</p>
        }

    </div>
</div>