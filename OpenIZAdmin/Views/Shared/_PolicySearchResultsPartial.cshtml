@using OpenIZAdmin.Util
@model IEnumerable<OpenIZAdmin.Models.PolicyModels.PolicyViewModel>
@{
    ViewBag.Title = Locale.PolicySearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span>@Locale.Policies</span>
        </h3>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="policiesSearchTable">
                <thead>
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Oid)</th>
                    <th>@Html.DisplayNameFor(m => m.Grant)</th>
                    <th>@Html.DisplayNameFor(m => m.CanOverride)</th>
                    <th>@Locale.Status</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-cloud" aria-hidden="true"></span></td>
                            <td>@item.Name</td>
                            <td>@item.Oid</td>
                            <td>@item.Grant</td>
                            <td>@item.CanOverride</td>
                            @*<td class="capitalize">@(item.IsObsolete ? Html.Raw("<text>" + Locale.Deactivated + "</text>") : Html.Raw("<text>" + Locale.Active + "</text>"))</td>*@
                            <td>@item.IsObsolete.ToObsoleteStatus()</td>
                            <td class="autoFitContents centerContent">
                                <a class="btn btn-primary" href="@Url.Action("ViewPolicy", "Policy", new {id = item.Id})">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                            </td>
                        </tr>
}

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoPoliciesFound</p>
        }

    </div>
</div>

