@model IEnumerable<OpenIZAdmin.Models.PolicyModels.ViewModels.PolicyViewModel>
@{
    ViewBag.Title = Locale.PolicySearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span>@Locale.SearchResults</span>
        </h3>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="policiesSearchTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Oid)</th>
                        <th>@Html.DisplayNameFor(m => m.Grant)</th>
                        <th>@Html.DisplayNameFor(m => m.CanOverride)</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Oid</td>
                            <td>@item.Grant</td>
                            <td>@item.CanOverride</td>
                            <td class="col-md-3 centerButton">
                                <a class="btn btn-primary" href="@Url.Action("ViewPolicy", "Policy", new { id = item.Key })">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                @if (!item.IsObsolete)
                                {
                                    using (Html.BeginForm("Delete", "Policy", new { id = item.Key }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form", id = "deactivate-policy-form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <a href="#" class="formButton btn btn-danger" onclick="showModal('deactivate-policy-form')">
                                            @Locale.Deactivate
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </a>
}
                                }

                            </td>
                        </tr>
}

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoPoliciesFound</p>
        }

    </div>
</div>

