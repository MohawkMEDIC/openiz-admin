@model IEnumerable<OpenIZAdmin.Models.PolicyModels.ViewModels.PolicyViewModel>
@{
    ViewBag.Title = Locale.PolicySearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span>@Locale.SearchResults</span>
        </h3>
    </div>
    <div class="panel panel-body">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered" id="policiesSearchTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Oid)</th>
                        <th>@Html.DisplayNameFor(m => m.Grant)</th>
                        <th>@Html.DisplayNameFor(m => m.CanOverride)</th>
                        <th></th>
                        @*<th></th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Oid</td>
                            <td>@item.Grant</td>
                            <td>@item.CanOverride</td>
                            <td>
                                <a class="btn btn-primary" href="/Policy/ViewPolicy?key=@item.Key">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                            </td>
                            @*<td>
                                <a class="btn btn-warning" href="/Policy/Edit/Edit?key=@item.Key">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>*@
                            <td>
                                @if (!item.IsObsolete)
                                {
                                    using (Html.BeginForm("Delete", "Policy", new { id = item.Key }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-danger">
                                            @Locale.Deactivate
                                            <span class="glyphicon glyphicon-log-out"></span>
                                        </button>
                                    }
                                }
                                else
                                {
                                    using (Html.BeginForm("Activate", "Policy", new { id = item.Key }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-success">
                                            @Locale.Activate
                                            <span class="glyphicon glyphicon-upload"></span>
                                        </button>
                                    }
                                }

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoPoliciesFound</p>
        }

    </div>
</div>

