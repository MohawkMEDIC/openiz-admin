@model IEnumerable<OpenIZAdmin.Models.MaterialModels.ViewModels.MaterialSearchResultViewModel>
@{
    ViewBag.Title = Locale.Materials;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">
            @Locale.Materials
        </span>
        <div class="pull-right">
            <span class="text-primary h4">@Locale.New</span>
            <a href="@Url.Action("Create", "Material", null)" class="glyphicon glyphicon-plus-sign"></a>
        </div>
</div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-bordered" id="materialsSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Locale.CreationTime
                        </th>
                        <th>
                            @Locale.Name
                        </th>
                        <th></th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="glyphicon glyphicon-grain pull-left" aria-hidden="true"></span></td>
                            <td>@item.CreationTime.ToString(Constants.DateTimeFormatStringWithTimestamp)</td>
                            <td>@item.Name</td>
                            <td class="col-md-3 centerButton">
                                <a class="btn btn-primary" href="/Material/ViewMaterial/@item.Id">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>                           
                                <a class="btn btn-warning" href="/Material/Edit/@item.Id">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>                            
                                <a class="btn btn-danger" href="/Material/Delete/@item.Id">
                                    @Locale.Delete
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@(Locale.No + " " + Locale.Materials + " " + Locale.Found)</p>
        }


    </div>
</div>