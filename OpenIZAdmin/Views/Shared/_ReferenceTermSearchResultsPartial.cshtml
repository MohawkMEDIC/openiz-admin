@using OpenIZAdmin.Extensions
@model IEnumerable<OpenIZAdmin.Models.ReferenceTermModels.ReferenceTermViewModel>
@{
    ViewBag.Title = Locale.ReferenceTerms;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ReferenceTerms</span>
    </div>
    <div class="panel panel-body">

        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="referenceTermsSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayNameFor(m => m.CreationTime)</th>
                        <th>@Html.DisplayNameFor(m => m.Mnemonic)</th>
                        <th>@Html.DisplayNameFor(m => m.Names)</th>                        
                        <th></th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></td>
                            <td class="autoFitContents">@item.CreationTime.DefaultFormat()</td>
                            <td>@item.Mnemonic</td>
                            <td>@item.Names</td>                            
                            <td class="autoFitContents centerContent">
                                <a class="btn btn-primary" href="@Url.Action("ViewReferenceTerm", "ReferenceTerm", new {id = item.Id})">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "ReferenceTerm", new {id = item.Id})">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoDataAvailable</p>
        }

    </div>
</div>