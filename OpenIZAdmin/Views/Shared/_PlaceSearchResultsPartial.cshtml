@model IEnumerable<OpenIZAdmin.Models.PlaceModels.PlaceViewModel>
@{
    ViewBag.Title = Locale.PlaceSearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span>@Locale.SearchResults</span>
        </h3>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="placesSearchTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Type)</th>
                        <th></th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Type</td>

                            <td class="col-md-3 centerButton">                                
                                <a class="btn btn-primary" href="@Url.Action("ViewPlace", "Place", new { id = item.Id })">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>                                                                
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Place", new { id = item.Id })">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>                                
                                @using (Html.BeginForm("Delete", "Place", new { id = item.Id }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="formButton btn btn-danger">
                                        @Locale.Delete
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
}                           
                            </td>
                        </tr>}

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NotFound</p>
        }

    </div>
</div>

