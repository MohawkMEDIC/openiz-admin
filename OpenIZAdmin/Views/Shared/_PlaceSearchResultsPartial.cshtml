@model IEnumerable<OpenIZAdmin.Models.PlaceModels.ViewModels.PlaceViewModel>
@{
    ViewBag.Title = Locale.PlaceSearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span>@Locale.SearchResults</span>
        </h3>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="placesSearchTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Type)</th>
                        <th></th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Type</td>

                            <td class="col-md-3 centerButton">                                
                                <a class="btn btn-primary" href="/Place/ViewPlace/@item.Id">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>                                                                
                                <a class="btn btn-warning" href="/Place/Edit/@item.Id">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>                                
                                <a class="btn btn-danger" href="/Place/Delete/@item.Id">
                                    @Locale.Delete
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>                                
                            </td>
                        </tr>}

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NotFound</p>
        }

    </div>
</div>

