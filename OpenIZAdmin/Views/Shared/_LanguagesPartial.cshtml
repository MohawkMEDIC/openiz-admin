@model IEnumerable<OpenIZAdmin.Models.Language>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ConceptNames</span>        
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered" id="languages-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@Locale.LanguageCode</th>
                                <th>@Locale.DisplayName</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-globe"></span></td>
                                    <td>@item.TwoLetterCountryCode</td>
                                    <td>@item.DisplayName</td>                                 
                                </tr>
                            }

                        </tbody>
                    </table>}
                else
                {
                    <p>@Locale.NoAssociatedLanguages</p>
                }
            </div>

        </div>
    </div>

</div>
