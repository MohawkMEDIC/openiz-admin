@model IEnumerable<OpenIZAdmin.Models.EntityRelationshipModels.EntityRelationshipViewModel>
@{
    ViewBag.Title = Locale.Relationships;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.Relationships</span>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered" id="relationshipsTable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@Html.DisplayNameFor(m => m.TargetName)</th>
                                <th>@Html.DisplayNameFor(m => m.RelationshipTypeName)</th>
                                <th>@Html.DisplayNameFor(m => m.TargetTypeConcept)</th>
                                <th>@Html.DisplayNameFor(m => m.Quantity)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="glyphicon glyphicon-info-sign"></span></td>
                                    <td>@item.TargetName</td>
                                    <td>@item.RelationshipTypeName</td>
                                    <td>@item.TargetTypeConcept</td>
                                    <td>@item.Quantity</td>
                                </tr>}

                        </tbody>
                    </table>}
                else
                {
                    <p>@Locale.NoAssociatedRelationships</p>}
            </div>

        </div>
    </div>
</div>
