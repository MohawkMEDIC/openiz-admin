<div id="confirm-delete-modal" class="modal fade" role="dialog" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="@Locale.Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">@Locale.ConfirmDelete</h4>
            </div>
            <div class="modal-body">
                <h5>@Locale.ConfirmDelete</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">@Locale.No</button>
                <button type="button" class="btn btn-primary" id="confirmDeleteYes">@Locale.Yes</button>
            </div>
        </div>
    </div>
</div>