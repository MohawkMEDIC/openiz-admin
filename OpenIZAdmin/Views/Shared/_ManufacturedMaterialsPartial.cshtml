@model IEnumerable<OpenIZAdmin.Models.ManufacturedMaterialModels.ManufacturedMaterialViewModel>
@{
    ViewBag.Title = Locale.ManufacturedMaterials;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ManufacturedMaterials</span>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered" id="manufacturedMaterialsTable">
                        <thead>
                        <tr>
                            <th></th>
                            <th>@Html.DisplayNameFor(m => m.CreationTime)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>@Html.DisplayNameFor(m => m.LotNumber)</th>
                            <th>@Html.DisplayNameFor(m => m.Type)</th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>                                    
                                    <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-baby-formula" aria-hidden="true"></span></td>
                                    <td>@item.CreationTime.ToString(Constants.DateTimeFormatStringWithTimestamp)</td>
                                    <td>@item.Name</td>
                                    <td>@item.LotNumber</td>
                                    <td>@item.Type</td>
                                </tr>}

                        </tbody>
                    </table>}
                else
                {
                    <p>@Locale.NoAssociatedManufacturedMaterials</p>}
            </div>

        </div>
    </div>
</div>
