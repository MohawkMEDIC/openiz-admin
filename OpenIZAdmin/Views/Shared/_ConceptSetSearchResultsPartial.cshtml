@model IEnumerable<OpenIZAdmin.Models.ConceptSetModels.ConceptSetSearchResultViewModel>
@{
    ViewBag.Title = Locale.ConceptSearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.SearchResults</span>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="conceptSetSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayNameFor(m => m.Mnemonic)</th>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>                        
                        <th>@Html.DisplayNameFor(m => m.Oid)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                  
                            <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-compressed" aria-hidden="true"></span></td>
                            <td>@item.Mnemonic</td>
                            <td>@item.Name</td>                            
                            <td>@item.Oid</td>
                            <td class="autoFitContents centerContent">
                                <a class="btn btn-primary" href="@Url.Action("ViewConceptSet", "ConceptSet", new { id = item.Id })">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "ConceptSet", new { id = item.Id })">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>                                
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NotFound</p>
        }

    </div>
</div>

