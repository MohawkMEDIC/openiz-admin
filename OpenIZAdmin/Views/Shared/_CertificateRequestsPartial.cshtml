@model IEnumerable<OpenIZAdmin.Models.CertificateModels.ViewModels.CertificateSigningRequestViewModel>
@{
    ViewBag.Title = Resources.CertificateRequests;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        @Resources.CertificateRequests
        <div class="pull-right">
            <span>@Resources.New</span>
            <a href="~/Certificate/SubmitCertificateSigningRequest" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Resources.CertificateSigningRequestId
                        </th>
                        <th>
                            @Resources.CommonName
                        </th>
                        <th>
                            @Resources.DateRequested
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="clickable-row" data-href="#">
                            <td><span class="glyphicon glyphicon-lock pull-left" aria-hidden="true"></span></td>
                            <td>@item.AdministrativeContactName</td>
                            <td>@item.AdministrativeContactName</td>
                            <td>@item.DistinguishedName</td>
                            <td>@item.SubmissionTime.ToLocalTime()</td>
                            <td><span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span></td>
                        </tr>}
                </tbody>
            </table>
        }
        else
        {
            <p>@Resources.NoNewCertificateSigningRequestsSubmitted.</p>
        }

    </div>
</div>


