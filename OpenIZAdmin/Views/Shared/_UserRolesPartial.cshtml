@model IEnumerable<OpenIZAdmin.Models.RoleModels.RoleViewModel>
@{
    ViewBag.Title = Locale.Roles;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">
            @Locale.Roles
        </span>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="userRolesTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Locale.Name</th>
                        <th>@Locale.Description</th>
                    </tr>
                </thead>
                <tbody>   
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoRolesAdded</p>
        }


    </div>
</div>
