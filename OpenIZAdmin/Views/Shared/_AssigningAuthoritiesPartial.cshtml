@model IEnumerable<OpenIZAdmin.Models.AssigningAuthorityModels.AssigningAuthorityViewModel>
@{
    ViewBag.Title = Locale.AssigningAuthorities;
}

<div class="panel panel-default">
    <div class="panel-heading">        
        <span class="panel-title">@Locale.SearchResults</span>        
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="assigningAuthorityTable">
                <thead>
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Oid)</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></td>
                            <td>@item.Name</td>
                            <td>@item.Oid</td>
                            <td class="autoFitContents centerContent">
                                <a class="btn btn-primary" href="@Url.Action("ViewAssigningAuthority", "AssigningAuthority", new {id = item.Id})">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "AssigningAuthority", new {id = item.Id})">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                @using (Html.BeginForm("Delete", "AssigningAuthority", new {id = item.Id}, FormMethod.Post, new {@class = "inlineForm form-horizontal", role = "form"}))
                                {
                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="btn btn-danger">
                                        @Locale.Delete
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                }
                            </td>
                        </tr>}

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoAdditionalDetails</p>
        }

    </div>
</div>

