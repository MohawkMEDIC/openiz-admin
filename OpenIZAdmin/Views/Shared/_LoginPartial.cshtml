@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown" id="profile-change-dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <span class="glyphicon glyphicon-user"></span>&nbsp;  @Locale.Hello @User.Identity.GetUserName()!<span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink(Locale.ChangePassword, "ChangePassword", "Account", null, new { title = "Password" })
                    </li>
                    <li>
                        @Html.ActionLink(Locale.UpdateProfile, "UpdateProfile", "Account", null, new { title = "Manage" })
                    </li>
                </ul>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">@Locale.Logoff</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Locale.Login, "Login", "Account", null, new { id = "loginLink" })</li>
    </ul>
}
