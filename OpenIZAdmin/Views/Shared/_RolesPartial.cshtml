@model IEnumerable<OpenIZAdmin.Models.RoleModels.RoleViewModel>
@{
    ViewBag.Title = Locale.Roles;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">
            @Locale.Roles
        </span>
        <div class="pull-right">
            <span class="text-primary h4">@Locale.New</span>
            <a href="@Url.Action("Create", "Role")" class="glyphicon glyphicon-plus-sign"></a>
        </div>
</div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-bordered" id="rolesSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Description)</th>
                        <th>@Html.DisplayNameFor(m => m.HasPolicies)</th>
                        <th>@Locale.Status</th>
                        <th></th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="glyphicon glyphicon-user pull-left" aria-hidden="true"></span></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>                            
                            <td>@(item.HasPolicies ? Html.Raw("<text>" + Locale.Yes + "</text>") : Html.Raw("<text>" + Locale.No + "</text>"))</td>
                            <td>@(item.IsObsolete ? Html.Raw("<text>" + Locale.Deactivated + "</text>") : Html.Raw("<text>" + Locale.Active + "</text>"))</td>
                            <td class="autoFitContents centerButton">
                                <a class="btn btn-primary" href="@Url.Action("ViewRole", "Role", new { id = item.Id })">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>                          
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Role", new { id = item.Id })">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoRolesAdded</p>
        }


    </div>
</div>

