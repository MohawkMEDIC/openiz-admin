@model IEnumerable<OpenIZAdmin.Models.RoleModels.ViewModels.RoleViewModel>
@{
    ViewBag.Title = "Roles";
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        Roles
        <div class="pull-right">
            <span>New</span>
            <a href="~/Role/CreateRole" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Role Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="clickable-row" data-href="/Role/Role/@item.Id">
                            <td><span class="glyphicon glyphicon-user pull-left" aria-hidden="true"></span></td>
                            <td><a href="/Role/Role/@item.Id">@item.Id</a></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span></td>
                        </tr>}
                </tbody>
            </table>
        }
        else
        {
            <p>No roles have been added.</p>
        }


    </div>
</div>

