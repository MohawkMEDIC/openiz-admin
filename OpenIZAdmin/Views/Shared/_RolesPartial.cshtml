@model IEnumerable<OpenIZAdmin.Models.RoleModels.ViewModels.RoleViewModel>
@{
    ViewBag.Title = Locale.Roles;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        @Locale.Roles
        <div class="pull-right">
            <span>@Locale.New</span>
            <a href="~/Role/Create" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered" id="rolesSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.HasPolicies)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="glyphicon glyphicon-user pull-left" aria-hidden="true"></span></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.HasPolicies)
                                {
                                    <text>@Locale.Yes</text>
                                }
                                else
                                {
                                    <text>@Locale.No</text>
                                }
                            </td> 
                            <td>
                                <a class="btn btn-primary" href="/Role/ViewRole/@item.Id">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/Role/Edit/@item.Id">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>
                        </tr>}
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoRolesAdded</p>
        }


    </div>
</div>

