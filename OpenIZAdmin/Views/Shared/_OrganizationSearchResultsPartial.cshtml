@model IEnumerable<OpenIZAdmin.Models.MaterialModels.ViewModels.MaterialSearchResultViewModel>
@{
    ViewBag.Title = Locale.Organizations;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">
            @Locale.Organizations
        </span>
        <div class="pull-right">
            <span class="text-primary h4">@Locale.New</span>
            <a href="@Url.Action("Create", "Organization")" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-bordered" id="materialsSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Locale.CreationTime
                        </th>
                        <th>
                            @Locale.Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="glyphicon glyphicon-grain pull-left" aria-hidden="true"></span></td>
                            <td>@item.CreationTime.ToString(Constants.DateTimeFormatStringWithTimestamp)</td>
                            <td>@item.Name</td>
                            <td class="col-md-3 centerButton">
                                <a class="btn btn-primary" href="@Url.Action("ViewOrganization", "Organization", new { id = item.Id })">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Organization", new { id = item.Id })">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                @using (Html.BeginForm("Delete", "Organization", new { id = item.Id }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="formButton btn btn-danger">
                                        @Locale.Delete
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
}
                            </td>
                        </tr>
}
                </tbody>
            </table>
        }
        else
        {
            <p>@(Locale.No + " " + Locale.Organizations + " " + Locale.Found)</p>
        }


    </div>
</div>