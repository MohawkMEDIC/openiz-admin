@model IEnumerable<OpenIZAdmin.Models.ConceptSetModels.ConceptSetViewModel>
@{
    ViewBag.Title = Locale.ConceptSearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ConceptSets</span>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="conceptSetTable">
                <thead>
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameFor(m => m.Mnemonic)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>                        
                    <th>@Html.DisplayNameFor(m => m.Oid)</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>                  
                        <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-compressed" aria-hidden="true"></span></td>
                        <td>@item.Mnemonic</td>
                        <td>@item.Name</td>                            
                        <td>@item.Oid</td>
                    </tr>
                }

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoConceptSetsFound</p>
        }

    </div>
</div>

