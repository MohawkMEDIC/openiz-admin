@model IEnumerable<OpenIZAdmin.Models.DeviceModels.DeviceViewModel>
@{
    ViewBag.Title = Locale.Devices;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">
            @Locale.Devices
        </span>
        <div class="pull-right">
            <span class="text-primary h4">@Locale.New</span>
            <a href="@Url.Action("Create", "Device")" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-bordered" id="devicesSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(m => m.CreationTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.HasPolicies)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="glyphicon glyphicon-phone pull-left" aria-hidden="true"></span></td>
                            <td>@item.CreationTime.ToLocalTime().ToString(Constants.DateTimeFormatStringWithTimestamp)</td>
                            <td>@item.Name</td>
                            <td>
                                @if (item.HasPolicies)
                                {
                                    <text>@Locale.Yes</text>
}
                                else
                                {
                                    <text>@Locale.No</text>
}
                            </td>
                            <td class="col-md-3 centerButton">
                                <a class="btn btn-primary" href="@Url.Action("ViewDevice", "Device", new { id = item.Id })">
                                @Locale.View
                                <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Device", new { id = item.Id })">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>
                        </tr>
}
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoDevicesFound</p>
        }


    </div>
</div>
