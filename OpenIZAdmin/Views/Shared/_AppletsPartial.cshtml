@model IEnumerable<OpenIZAdmin.Models.AppletModels.ViewModels.AppletViewModel>
@{
    ViewBag.Title = Resources.Applets;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        @Resources.New
        <div class="pull-right">
            <span></span>
            <a href="~/Applet/Upload" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Resources.AppletId
                    </th>
                    <th>
                        @Resources.Group
                    </th>
                    <th>
                        @Resources.Name
                    </th>
                    <th>
                        @Resources.Version
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(item.Id.ToString(), "Applet", "Applet", new { appletId = item.Id }, null)</td>
                        <td>@item.Group</td>
                        <td>@item.Name</td>
                        <td>@item.Version</td>
                    </tr>
}
            </tbody>
        </table>

    </div>
</div>