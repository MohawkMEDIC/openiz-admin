@model IEnumerable<OpenIZAdmin.Models.ReferenceTermModels.ReferenceTermNameViewModel>
@{
    ViewBag.Title = Locale.ReferenceTermNames;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ReferenceTermNames</span>
    </div>
    <div class="panel panel-body">

        @if (Model.Any())
        {
            <table class="table" id="referenceTermNamesTable">
                <caption>@Locale.ReferenceTerms</caption>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Language)</th>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var referenceTerm in Model)
                    {
                        <tr>
                            <td>@referenceTerm.Language</td>
                            <td>@referenceTerm.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoDataAvailable</p>
        }

    </div>
</div>