@model IEnumerable<OpenIZAdmin.Models.ProviderModels.ViewModels.ProviderViewModel>
@{
    ViewBag.Title = Locale.Providers;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        @Locale.Providers
        <div class="pull-right">
            <span>@Locale.New</span>
            <a href="~/Provider/Create" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered" id="providersSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.UserId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.ProviderSpecialty)
                        </th>                       
                        <th>
                            @Html.DisplayNameFor(m => m.CreationTime)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="glyphicon glyphicon-user pull-left" aria-hidden="true"></span></td>                            
                            <td>@item.Name</td>                            
                            <td>@item.UserId</td>
                            <td>@item.ProviderSpecialty</td>                            
                            @*<td>@item.CreationTime</td>*@
                            <td>
                                @if (item.CreationTime != null)
                                {
                                    DateTimeOffset date = item.CreationTime.Value.ToLocalTime();
                                    @date.ToString(Constants.DATETIME_FORMAT_STRING_WITH_TIMESTAMP);
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/Provider/ViewProvider?key=@item.Key&versionKey=@item.VersionKey.GetValueOrDefault()">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/Provider/Edit?key=@item.Key&versionKey=@item.VersionKey.GetValueOrDefault()">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>                            
                        </tr>}
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoProvidersFound</p>            
        }


    </div>
</div>

