@model IEnumerable<OpenIZAdmin.Models.UserModels.UserViewModel>
@{
    ViewBag.Title = Locale.Users;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.Users</span>
        <div class="pull-right">
            <span class="text-primary h4">@Locale.New</span>
            <a href="@Url.Action("Create", "User")" class="glyphicon glyphicon-plus-sign"></a>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-bordered" id="usersSearchTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(m => m.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IsLockedOut)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Roles)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="glyphicon glyphicon-user pull-left" aria-hidden="true"></span></td>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.IsLockedOut)
                                {
                                    <text>@Locale.Yes</text>
}
                                else
                                {
                                    <text>@Locale.No</text>
}
                            </td>
                            <td>
                                @if (item.HasRoles)
                                {
                                    <text>@Locale.Yes</text>
}
                                else
                                {
                                    <text>@Locale.No</text>
}
                            </td>
                            <td class="autoFitContents centerButton">
                                <a class="btn btn-primary" href="@Url.Action("ViewUser", "User", new { id = item.Id })">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "User", new { id = item.Id })">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>
                        </tr>
}
                </tbody>
            </table>
        }
        else
        {
            <p>@(Locale.No + " " + Locale.Users + " " + Locale.Found)</p>
        }


    </div>
</div>

