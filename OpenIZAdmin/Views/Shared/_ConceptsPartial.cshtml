@model IEnumerable<OpenIZAdmin.Models.ConceptModels.ConceptViewModel >

<div class="panel panel-body">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <table class="table" id="conceptListTable">
                    <thead>
                        <tr>
                            <th>
                                @Locale.ConceptClass
                            </th>
                            <th>
                                @Locale.Mnemonic
                            </th>
                            <th>
                                @Locale.Name
                            </th>                            
                        </tr>
                    </thead>
                    <tbody>
                        
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Class

                            </td>
                            <td>
                                @item.Mnemonic
                            </td>
                            <td>
                                @item.Names
                            </td>                          
                        </tr>
                    }   
                                             
                    </tbody>                       
                </table>
            }
            else
            {
                <p>@Locale.NoConceptsFound</p>
            }
        </div>
    </div>
</div>
