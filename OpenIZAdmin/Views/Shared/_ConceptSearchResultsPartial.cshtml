@using OpenIZAdmin.Models.ConceptModels
@model IEnumerable<ConceptSearchResultViewModel>
@{
    ViewBag.Title = Locale.ConceptSearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.SearchResults</span>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="conceptsSearchTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.CreationTime)</th>
                        <th>@Html.DisplayNameFor(m => m.Mnemonic)</th>
                        <th>@Html.DisplayNameFor(m => m.Names)</th>
                        <th>@Html.DisplayNameFor(m => m.Type)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.Type == ConceptType.Concept)
                        {
                            <tr>
                                <td>@item.CreationTime.ToLocalTime().ToString(Constants.DateTimeFormatStringWithTimestamp)</td>

                                <td>@item.Mnemonic</td>

                                <td>
                                    @if (item.Names.Any())
                                    {
                                        string.Join(", ", item.Names);
                                    }
                                </td>

                                <td>@Locale.Concept</td>

                                <td class="col-md-3 centerButton">
                                    <a class="btn btn-primary text-white" href="@Url.Action("ViewConcept", "Concept", new { id = item.Id })">
                                        @Locale.View
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                    </a>
                                    <a class="btn btn-warning text-white" href="@Url.Action("Edit", "Concept", new {id = item.Id })">
                                        @Locale.Edit
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>

                                    @if (!item.IsReadOnly)
                                    {
                                        using (Html.BeginForm("Delete", "Concept", new { id = item.Id }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            <button type="submit" class="formButton btn btn-danger">
                                                @Locale.Delete
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </button>
}
                                    }
                                </td>
                            </tr>}
                        else
                        {
                            <tr>
                                <td>@item.CreationTime</td>
                                <td>@item.Mnemonic</td>
                                @if (!item.Names.Any())
                                {
                                    <td></td>
}
                                else
                                {
                                    <td>@string.Join(", ", item.Names)</td>
}
                                <td>@Locale.ConceptSet</td>
                                <td class="col-md-3 centerButton">
                                    <a class="btn btn-primary text-white" href="@Url.Action("ViewConceptSet", "ConceptSet", new { id = item.Id })">
                                        @Locale.View
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                    </a>
                                    <a class="btn btn-warning text-white" href="@Url.Action("Edit", "ConceptSet", new { id = item.Id })">
                                        @Locale.Edit
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    @using (Html.BeginForm("Delete", "ConceptSet", new { id = item.Id }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="formButton btn btn-danger">
                                            @Locale.Delete
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </button>
}
                                </td>
                            </tr>
}
                    }

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NotFound</p>
        }

    </div>
</div>

