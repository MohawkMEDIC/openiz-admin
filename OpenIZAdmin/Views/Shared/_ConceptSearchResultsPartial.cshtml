@model IEnumerable<OpenIZAdmin.Models.ConceptModels.ViewModels.ConceptSearchResultViewModel>
@{
    ViewBag.Title = Locale.ConceptSearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span>@Locale.SearchResults</span>
        </h3>
    </div>
    <div class="panel panel-body">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.CreationTime)</th>
                        <th>@Html.DisplayNameFor(m => m.Mnemonic)</th>
                        <th>@Html.DisplayNameFor(m => m.ConceptNames)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreationTime</td>
                            <td>@item.Mnemonic</td>
                            <td>@item.ConceptNames.Aggregate((a, b) => (a + ", " + b))</td>
                            <td>
                                <span class="btn-group">
                                    @if (item.ConceptSearchType == OpenIZAdmin.Models.ConceptModels.ConceptSearchType.Concept)
                                    {
                                        <a class="btn btn-primary text-white" href="/Concept/ViewConcept?key=@item.Key&versionKey=@item.VersionKey.GetValueOrDefault()">
                                            @Locale.View
                                            <span class="glyphicon glyphicon-eye-open"></span>
                                        </a>
}
                                    else if (item.ConceptSearchType == OpenIZAdmin.Models.ConceptModels.ConceptSearchType.ConceptSet)
                                    {
                                        <a class="btn btn-primary" href="/Concept/ViewConceptSet?key=@item.Key">
                                            @Locale.View
                                            <span class="glyphicon glyphicon-eye-open"></span>
                                        </a>
}
                                </span>
                            </td>
                        </tr>}

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoConceptsFound</p>
        }

    </div>
</div>

