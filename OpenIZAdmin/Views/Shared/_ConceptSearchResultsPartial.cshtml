@using OpenIZAdmin.Models.ConceptModels
@model IEnumerable<ConceptSearchResultViewModel>
@{
    ViewBag.Title = Locale.ConceptSearchResults;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.SearchResults</span>
    </div>
    <div class="panel panel-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered" id="conceptsSearchTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.CreationTime)</th>
                        <th>@Html.DisplayNameFor(m => m.Mnemonic)</th>
                        <th>@Html.DisplayNameFor(m => m.Names)</th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreationTime.ToLocalTime().ToString(Constants.DateTimeFormatStringWithTimestamp)</td>

                            <td>@item.Mnemonic</td>

                            <td>@item.ConceptNames</td>

                            <td class="autoFitContents centerButton">
                                <a class="btn btn-primary" href="@Url.Action("ViewConcept", "Concept", new { id = item.Id, versionId = item.VersionKey })">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a class="@("btn btn-warning" + (item.IsSystemConcept ? "disabled" : string.Empty))" href="@Url.Action("Edit", "Concept", new {id = item.Id, versionId = item.VersionKey })">
                                    @Locale.Edit
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>                                
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NotFound</p>
        }

    </div>
</div>

