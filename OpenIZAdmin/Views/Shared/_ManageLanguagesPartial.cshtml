@model IEnumerable<OpenIZAdmin.Models.LanguageModels.LanguageModel>

        
<div class="panel panel-body">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
        {
                <table class="table table-striped table-bordered" id="languages-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@Locale.LanguageCode</th>
                            <th>@Locale.DisplayName</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="glyphicon glyphicon-info-sign"></span></td>
                                <td>@item.TwoLetterCountryCode</td>
                                <td>@item.DisplayName</td>
                                <td class="autoFitContents centerButton">
                                    <a class="btn btn-warning" href="@Url.Action("Edit", "Language", new { id = item.ConceptId, langCode = item.TwoLetterCountryCode, displayName = item.DisplayName })">
                                        @Locale.Edit
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    @using (Html.BeginForm("Delete", "Language", new { id = item.ConceptId, langCode = item.TwoLetterCountryCode, displayName = item.DisplayName }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-danger">
                                            @Locale.Delete
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </button>
                                    }
                                </td>
                            </tr>}

                    </tbody>
                </table>}
        else
        {
                <p>@Locale.NoAssociatedLanguages</p>}
        </div>

    </div>
</div> 
    
                    







