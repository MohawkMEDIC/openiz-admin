@model IEnumerable<OpenIZAdmin.Models.ConceptModels.ConceptViewModel>


<div class="panel panel-body">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <table class="table" id="conceptListTable">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Mnemonic)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Names)
                        </th>
                        <th>
                            @Locale.ConceptClass
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>                    
                    @foreach (var item in Model)
                    {
                        <tr>                            
                            <td>
                                @item.Mnemonic

                            </td>
                            <td>
                                @item.ConceptNames
                            </td>
                            <td>
                                @item.Class
                            </td>
                            <td class="autoFitContents centerButton">
                                <a class="btn btn-primary" href="@Url.Action("ViewConcept", "Concept", new {id = item.Id, versionId = item.VersionKey})">
                                    @Locale.View
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>

                                @using (Html.BeginForm("DeleteConceptFromSet", "ConceptSet", new { setId = item.ConceptSetId, conceptId = item.Id }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
                                { 
                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="btn btn-danger">
                                        @Locale.Delete
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                }
                            </td>
                        </tr>                        
                    }
                    </tbody>
                </table>
            }
            else
            {

            }
        </div>
    </div>
</div>
    
