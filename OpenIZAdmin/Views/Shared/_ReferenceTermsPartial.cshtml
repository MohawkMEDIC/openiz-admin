@model IEnumerable<OpenIZAdmin.Models.ConceptModels.ReferenceTermModel>
@{
    ViewBag.Title = Locale.ReferenceTerms;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ReferenceTerms</span>
    </div>
    <div class="panel panel-body">

        @if (Model.Any())
        {
            <table class="table" id="referenceTermsTable">
                <caption>@Locale.ReferenceTerms</caption>
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Mnemonic)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var referenceTerm in Model)
                {
                        <tr>
                            <td>
                                @referenceTerm.Mnemonic
                            </td>

                            <td>
                                @referenceTerm.Name
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Locale.NoDataAvailable</p>
        }

    </div>
</div>