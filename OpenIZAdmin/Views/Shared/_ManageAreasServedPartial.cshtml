@model IEnumerable<OpenIZAdmin.Models.EntityRelationshipModels.EntityRelationshipModel>
@{
    ViewBag.Title = Locale.AreasServed;
}
<div class="panel panel-body">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <table class="table table-striped table-bordered" id="areasServedTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@Html.DisplayNameFor(m => m.TargetName)</th>
                            <th>@Html.DisplayNameFor(m => m.RelationshipTypeName)</th>
                            <th>@Html.DisplayNameFor(m => m.TargetTypeConcept)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-random"></span></td>

                                @if (item.IsInverse)
                                {
                                    <td>@item.SourceName</td>  }
                                else
                                {
                                    <td>@item.TargetName</td>
}
                                <td>@item.RelationshipTypeName</td>

                                @if (item.IsInverse)
                                {
                                    <td>@item.SourceTypeConcept</td>
}
                                else
                                {
                                    <td>@item.TargetTypeConcept</td>
}
                                <td class="autoFitContents centerContent">
                                    @using (Html.BeginForm("Delete", "EntityRelationship", new { id = item.Id, sourceId = item.SourceId, type = item.SourceType }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <button type="submit" data-wait-text="@Locale.PleaseWait" class="btn btn-danger">
                                            @Locale.Delete
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </button>
}
                                </td>
                            </tr>}

                    </tbody>
                </table>}
            else
            {
                <p>@Locale.NoAreasServed</p>}
        </div>

    </div>
</div>