@model OpenIZAdmin.Models.CertificateModels.SubmitCertificateSigningRequestModel
@{
    ViewBag.Title = "Create";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">Submit Certificate Signing Request</span>
    </div>
    <div class="panel panel-body">
        @using (Html.BeginForm("SubmitCertificateSigningRequest", "Certificate", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.CmcRequest, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.CmcRequest, new { @class = "form-control", rows = 10 })
                    @Html.ValidationMessageFor(m => m.CmcRequest, "", new { @class = "text-danger" })
                </div>
            </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AdministrativeContactName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.AdministrativeContactName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AdministrativeContactName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AdministrativeContactEmail, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.AdministrativeContactEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AdministrativeContactEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" data-wait-text="@Locale.PleaseWait" class="btn btn-primary" title="@Locale.ToolTip_Submit">@Locale.Submit</button>
                    </div>
                </div>
        }
    </div>
</div>

