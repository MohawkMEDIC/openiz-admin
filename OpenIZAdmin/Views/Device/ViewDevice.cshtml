@model OpenIZAdmin.Models.DeviceModels.DeviceViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.Device;
}

@{
    if (Model.IsObsolete)
    {
        <span class="text-danger text-uppercase">@Locale.DeviceNotActive</span>}
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.View + " " + Locale.Device)</span>
        <div class="pull-right">
            <a href="@Url.Action("Edit", "Device", new { id = Model.Id })" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-pencil"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.Id)
                        @Html.LabelFor(m => m.CreationTime, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.CreationTime, Constants.DateTimeFormatViewWithTimestamp, new { @class = "form-control", @readonly = "readonly" })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_PoliciesPartial", Model.Policies)

@section scripts{
    <script>
        $(document).ready(function ()
        {
            $("#policyTable").DataTable();
        });
    </script>
}