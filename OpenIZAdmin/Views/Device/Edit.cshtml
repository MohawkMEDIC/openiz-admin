@model OpenIZAdmin.Models.DeviceModels.EditDeviceModel
@{
    ViewBag.Title = Locale.EditDevice;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        @Locale.EditDevice
    </div>

    @using (Html.BeginForm("Edit", "Device", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

    <div class="panel panel-body panel-default">
        <div class="row">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)                        
                <div class="form-group">
                    @Html.LabelFor(m => m.CreationTime, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.CreationTime, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.CreationTime, "", new { @class = "text-danger" })
                    </div>
                </div>                        
                <div class="form-group">
                    @Html.LabelFor(m => m.DeviceSecret, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.DeviceSecret, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DeviceSecret, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.AddPolicies, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.ListBoxFor(m => m.AddPolicies, Model.PoliciesList, new { @class = "dynamic-dropdown form-control", multiple = "multiple" })
                        @Html.ValidationMessageFor(m => m.AddPolicies, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Locale.Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
}

        <div class="panel panel-default">
            <div class="panel panel-heading">
                <span>@Locale.Policies</span>
                @*<div class="pull-right">
                    <a href="~/Device/Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                        @Locale.AddPolicy
                    </a>
                </div>*@
            </div>
            <div class="panel panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                @if (Model.DevicePolicies.Any())
                                {
                                <label class="control-label">@Html.DisplayNameFor(m => m.Policies)</label>
                                <table class="table table-striped table-bordered" id="devicePolicyTable">
                                    <thead>
                                        <tr>
                                            <th>@Locale.CreationTime</th>
                                            <th>@Locale.Name</th>
                                            <th>@Locale.Grant</th>
                                            <th>@Locale.IsPublic</th>
                                            <th>@Locale.Oid</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.DevicePolicies)
                                        {
                                            <tr>
                                                <td></td>
                                                <td>@item.Name</td>
                                                <td>@item.Grant</td>
                                                <td>@item.IsPublic</td>
                                                <td>@item.Oid</td>
                                                <td>
                                                    @if (!item.IsObsolete)
                                                    {
                                                        using (Html.BeginForm("DeletePolicy", "Device", new { deviceId = Model.Id, key = item.Key }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                                        {
                                                            @Html.AntiForgeryToken()

                                                            <button type="submit" class="btn btn-danger">
                                                                @Locale.Delete
                                                                <span class="glyphicon glyphicon-log-out"></span>
                                                            </button>
                                                        }
                                                    }
                                                </td>
                                            </tr> }

                                    </tbody>
                                </table>
                                }
                                else
                                {
                                    <p>@Locale.NoPoliciesAdded</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>           
    </div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function ()
        {
            $("#devicePolicyTable").DataTable();
            $('.dynamic-dropdown').select2({
                tags: true,
                tokenSeparators: [','],
                width: '100%'
            });
        });
    </script>

}
