@model OpenIZAdmin.Models.PlaceModels.ViewModels.PlaceViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.Place;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.View + " " + Locale.Place)</span>
        <div class="pull-right">
            <a href="~/Place/Edit?key=@Model.Key" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-edit"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CreationTime, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.CreationTime, Constants.DATETIME_FORMAT_VIEW_WITH_TIMESTAMP, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">
            <span class="text-white h4">@Locale.Details</span>
        </span>
    </div>
    <div class="panel panel-body">
        @if (Model.RelatedPlaces.Any())
        {
            <table class="table table-striped table-bordered" id="viewPlaceTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.CreationTime)</th>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Type)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RelatedPlaces)
                    {
                        <tr>                            
                            <td>
                                @if (item.CreationTime != null)
                                {                                    
                                    @item.CreationTime.ToString(Constants.DATETIME_FORMAT_STRING_WITH_TIMESTAMP);
                                }
                                
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Type</td>
                        </tr>}
                </tbody>
            </table>}
        else
        {
            <p>@Locale.NoAdditionalDetails</p>}

    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#viewPlaceTable").DataTable();

        });
    </script>

}