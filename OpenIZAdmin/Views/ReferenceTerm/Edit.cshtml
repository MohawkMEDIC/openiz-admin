@model OpenIZAdmin.Models.ReferenceTermModels.EditReferenceTermViewModel
@{
    ViewBag.Title = Locale.EditReferenceTerm_Heading;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.EditReferenceTerm_Heading</span>
    </div>
    <div class="panel panel-body">
        @using (Html.BeginForm("Edit", "ReferenceTerm", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.Mnemonic, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Mnemonic, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Mnemonic, "", new { @class = "text-danger" })
                </div>                
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="@Url.Action("ViewReferenceTerm", new { id = Model.Id })" class="btn btn-danger">@Locale.Cancel</a>
                    <button type="submit" data-locale-text="@Locale.PleaseWait" class="btn btn-primary" title="@Locale.ToolTip_Submit">@Locale.Submit</button>
                </div>                        
            </div>
        }
                
        <div class="col-md-3 pull-right">
            @using (Html.BeginForm("Delete", "ReferenceTerm", new { id = Model.Id }, FormMethod.Post, new { @class = "inlineForm form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <button type="submit" data-locale-text="@Locale.PleaseWait" class="btn btn-danger">
                    @Locale.Delete
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            }
        </div>        
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ReferenceTermName</span>
        <div class="pull-right">
            <a href="@Url.Action("Create", "ReferenceTermName", new { id = Model.Id })">
                <span class="text-primary h4">@Locale.New</span>
                <span class="glyphicon glyphicon-plus-sign"></span>
            </a>
        </div>
    </div>
    @Html.Partial("_ManageReferenceTermNamesPartial", Model.TermNamesList)
</div>


@section scripts{
    <script type="text/javascript">
        
        $(document).ready(function() {

            $('#referenceTermNamesTable').DataTable({
                "language":
                {
                    "url": "/Content/datatable-locales/" + getCookie("@LocalizationConfig.LanguageCookieName") + ".json"
                },
                order: [],
                columns: [
                  { "orderable": false },
                  null,                  
                  null,
                  { "orderable": false }
                ]
            });

        });

    </script>
}