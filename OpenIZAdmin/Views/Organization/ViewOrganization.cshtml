            //$("#identifiersTable").DataTable();
            $('#identifiersTable').DataTable({
                order: [],
                columns: [
                  { "orderable": false },
                  null,
                  null,
                  null                  
                ]
            });

            //$("#manufacturedMaterialsTable").DataTable();
            $('#manufacturedMaterialsTable').DataTable({
                order: [],
                columns: [
                  { "orderable": false },
                  null,
                  null,
                  null,
                  null                  
                ]
            });

            $('#relationshipsTable').DataTable({
                order: [],
                columns: [
                  { "orderable": false },
                  null,
                  null,
                  null,
                  null
                ]
            });
        });
    </script>
}