@model OpenIZAdmin.Models.ApplicationModels.ViewModels.ApplicationViewModel
@{
    ViewBag.Title = Locale.Application;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span>@Locale.Application</span>
        <div class="pull-right">
            <a href="~/Application/Edit/Edit?key=@Model.Id">
                <span class="glyphicon glyphicon-edit"></span>
                @Locale.Edit
            </a>
        </div>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group form-horizontal">
                    @Html.HiddenFor(m => m.Id)                   
                    <div class="form-group">
                        @Html.LabelFor(m => m.ApplicationName, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.ApplicationName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.ApplicationName, "", new { @class = "text-danger" })
                        </div>
                    </div>                      
                    <div class="form-group">
                        @Html.LabelFor(m => m.ApplicationSecret, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.ApplicationSecret, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.ApplicationSecret, "", new { @class = "text-danger" })
                        </div>
                    </div>                      
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span>@Locale.Policies</span>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        @if (Model.Policies.Count() > 0)
                        {
                        @*<label class="control-label">@Html.DisplayNameFor(m => m.Policies)</label>*@
                        <table class="table table-striped table-bordered" id="applicationPolicyTable">
                            <thead>
                                <tr>
                                    <th>@Locale.CreationTime</th>
                                    <th>@Locale.Name</th>
                                    <th>@Locale.Grant</th>
                                    <th>@Locale.IsPublic</th>
                                    <th>@Locale.Oid</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Policies)
                                {
                                    <tr>
                                        <td>@item.CreationTime</td>
                                        <td>@item.Name</td>
                                        <td>@item.Grant</td>
                                        <td>@item.IsPublic</td>
                                        <td>@item.Oid</td>
                                    </tr>}

                            </tbody>
                        </table>
                        }
                        else
                        {
                            <p>@Locale.NoPoliciesFound</p>
                        }
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#applicationPolicyTable").DataTable();
        });
    </script>
    }