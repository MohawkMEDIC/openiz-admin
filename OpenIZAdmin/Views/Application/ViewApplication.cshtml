@model OpenIZAdmin.Models.ApplicationModels.ViewModels.ApplicationViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.Application;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span class="h4">@(Locale.View + " " + Locale.Application)</span>
        <div class="pull-right">
            <a href="~/Application/Edit/Edit?key=@Model.Id" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-edit"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group form-horizontal">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.ApplicationName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.ApplicationName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.ApplicationName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span class="h4">@Locale.Policies</span>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        @if (Model.Policies.Count() > 0)
                        {
                            <table class="table table-striped table-bordered" id="applicationPolicyTable">
                                <thead>
                                    <tr>
                                        <th>@Locale.CreationTime</th>
                                        <th>@Locale.Name</th>
                                        <th>@Locale.Grant</th>
                                        <th>@Locale.IsPublic</th>
                                        <th>@Locale.Oid</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Policies)
                                    {
                                        <tr>
                                            @*<td>@item.CreationTime</td>*@
                                            <td>
                                                @if(item.CreationTime != null)
                                                {
                                                    @item.CreationTime.ToString(Constants.DATETIME_FORMAT_STRING_WITH_TIMESTAMP);
                                                }                                                
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.Grant</td>
                                            <td>@item.IsPublic</td>
                                            <td>@item.Oid</td>
                                        </tr>}

                                </tbody>
                            </table>}
                        else
                        {
                            <p>@Locale.NoPoliciesFound</p>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $("#applicationPolicyTable").DataTable();
        });
    </script>
}