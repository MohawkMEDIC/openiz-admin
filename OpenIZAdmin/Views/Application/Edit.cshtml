@model OpenIZAdmin.Models.ApplicationModels.EditApplicationModel
@{
    ViewBag.Title = Locale.Edit + " " + Locale.Application;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.Edit + " " + Locale.Application)</span>
    </div>

    @using (Html.BeginForm("Edit", "Application", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="panel panel-body panel-default">
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.ApplicationName, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.ApplicationName, new { @class = "form-control", title = Locale.ToolTip_AppName })
                    @Html.ValidationMessageFor(m => m.ApplicationName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Policies, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.ListBoxFor(m => m.Policies, Model.PoliciesList, new { @class = "dynamic-dropdown form-control", multiple = "multiple", title = Locale.ToolTip_Policies })
                    @Html.ValidationMessageFor(m => m.Policies, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="@Locale.Submit" class="btn btn-primary" title="@Locale.ToolTip_Submit" />
                </div>
            </div>
        </div>
    }
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.Policies</span>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="form-group">
                <div class="col-md-12">
                    @if (Model.ApplicationPolicies.Any())
                    {
                        <table class="table table-striped table-bordered" id="applicationPolicyTable">
                            <thead>
                                <tr>
                                    <th>@Locale.CreationTime</th>
                                    <th>@Locale.Name</th>
                                    <th>@Locale.Grant</th>
                                    <th>@Locale.IsPublic</th>
                                    <th>@Locale.Oid</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ApplicationPolicies)
                                {
                                    <tr>
                                        <td>@item.CreationTime.ToString(Constants.DateTimeFormatStringWithTimestamp)</td>
                                        <td>@item.Name</td>
                                        <td>@item.Grant</td>
                                        <td>@item.IsPublic</td>
                                        <td>@item.Oid</td>
                                    </tr> }
                            </tbody>
                        </table>}
                    else
                    {
                        <p>@Locale.NoPoliciesFound</p>              }
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script type="text/javascript">
        $(document).ready(function ()
        {
            $("#applicationPolicyTable").DataTable();
            $('.dynamic-dropdown').select2({
                tags: true,
                tokenSeparators: [','],
                width: '100%'
            });
            $('.dynamic-dropdown-limited').select2({
                tags: true,
                tokenSeparators: [','],
                width: '100%',
                maximumSelectionLength: 1
            });
        });
    </script>

}

