@model IEnumerable<OpenIZAdmin.Models.ApplicationModels.ApplicationViewModel>
@{
    ViewBag.Title = Locale.Applications;
}
<div id="search-partial">
    @Html.Partial("_SearchPartial", new OpenIZAdmin.Models.SearchModel())
</div>

@section scripts{
    <script>
        $(document).ready(function ()
        {
            $.ajax({
                url: "Search?searchTerm=*",
                type: "GET",
                beforeSend: function()
                {
                    showLoadingBar();
                },
                success: function (data)
                {
                    $("#search-results").html(data);
                },
                complete: function()
                {
                    hideLoadingBar();
                }
            });

            $('#search-partial').bind("DOMSubtreeModified", function ()
            {
                if (!$('#applicationPoliciesTable').length)
                    return;

                if ($.fn.DataTable.isDataTable('#applicationPoliciesTable'))
                    return;

                //$("#applicationPoliciesTable").DataTable();
                $('#applicationPoliciesTable').DataTable({
                    order: [],
                    columns: [
                      { "orderable": false },
                      null,
                      null,
                      null,
                      null,
                      { "orderable": false }
                    ]
                });
            });
        });
    </script>
}