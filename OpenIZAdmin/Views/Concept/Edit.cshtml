@model OpenIZAdmin.Models.ConceptModels.EditConceptModel
@{
    ViewBag.Title = Locale.Edit + " " + Locale.Concept;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.Edit + " " + Locale.Concept)</span>
    </div>

    @using (Html.BeginForm("Edit", "Concept", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="panel panel-body panel-default">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(m => m.ConceptClass, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.ConceptClass, new { @class = "form-control", @readonly = "readonly", title = Locale.ToolTip_ConceptClass })
                    @Html.ValidationMessageFor(m => m.ConceptClass, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CreationTime, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.CreationTime, Constants.DateTimeFormatViewWithTimestamp, new { @class = "form-control", @readonly = "readonly", title = Locale.ToolTip_CreationTime })                    
                </div>
            </div>
           
            <div class="form-group"></div>
                @Html.LabelFor(m => m.SelectedLanguage, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.SelectedLanguage, Model.LanguageList, new { @class = "form-control", @id = "languageList", title = Locale.ToolTip_Language })
                    @Html.ValidationMessageFor(m => m.SelectedLanguage, "", new { @class = "text-danger" })
                </div>
                <a href="#" id="btnAdd"><i class="glyphicon glyphicon-plus-sign"></i>Add Language</a>
            @Html.HiddenFor(m => m.Key)
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @if (Model != null)
                        {
                            <ul class="nav nav-tabs" id="tabs">
                                @{int i = 0;}
                                @foreach (var language in Model.Languages)
                                {
                                    if (i == 0)
                                    {
                                        <li class="active">
                                            <a href="#@language" data-toggle="tab">@Model.Languages[i]</a>
                                        </li>
}
                                    else
                                    {
                                        <li>
                                            <a href="#@language" data-toggle="tab">@Model.Languages[i]</a>
                                        </li>
}
                                    i++;
                                }
                            </ul>
                            <div class="tab-content">
                                @{i = 0;}
                                @foreach (var language in Model.Languages)
                                {
                                    if (i == 0)
                                    {
                                        <div id="@language" class="tab-pane active">
                                            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.Name[i], new { @class = "form-control" })
                                            @Html.LabelFor(m => m.Languages, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.Languages[i], new { @class = "form-control", @readonly = "readonly" })
                                        </div>
}
                                    else
                                    {
                                        <div id="@language" class="tab-pane">
                                            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.Name[i], new { @class = "form-control" })
                                            @Html.LabelFor(m => m.Languages, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.Languages[i], new { @class = "form-control", @readonly = "readonly" })
                                        </div>
}
                                    i++;
                                }
                            </div>  }

                    </div>

                </div>

            </div>
        </div>
        <button type="submit" class="btn btn-primary" title="@Locale.ToolTip_Submit">
            @Locale.Submit
        </button>
                                    }
</div>

<table class="table" id="referenceTermsTable">
    <caption>@Locale.ReferenceTerms</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Mnemonic)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var referenceTerm in Model.ReferenceTerms)
        {
            <tr>
                <td>
                    @referenceTerm.Mnemonic
                </td>

                <td>
                    @referenceTerm.Name
                </td>
            </tr>
        }
    </tbody>

</table>
@section Scripts
{
    <script>
        $('#btnAdd').click(function (e)
        {
            var nextTab = $('#tabs li').size() + 1;
            var selectedLanguage = $('#languageList option:selected').val();
            $('<li><a href="#' + selectedLanguage + '" data-toggle="tab">' + selectedLanguage + '</a></li>').appendTo('#tabs');

            $('<div class="tab-pane" id="' + selectedLanguage + '">' + '<label class="control-label" for="Name">Name</label><input class="form-control" id="Name_' + (nextTab - 1) + '_" name="Name[' + (nextTab - 1) + ']" type="text" value="">' + '<label class="control-label" for="Languages">Languages</label><input class="form-control" id="Languages_' + (nextTab - 1) + '_" name="Languages[' + (nextTab - 1) + ']" readonly="readonly" type="text" value=' + selectedLanguage + '></div>').appendTo('.tab-content');

            $('#tabs a:last').tab('show');
        });
        $(document).ready(function () {
            $('#referenceTermsTable').DataTable();
        });
    </script>

}