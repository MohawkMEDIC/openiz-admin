@model OpenIZAdmin.Models.ConceptModels.ViewModels.ConceptViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.Concept;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.View + " " + Locale.Concept)</span>
        <div class="pull-right">
            <a href="@Url.Action("Edit", new { id = Model.Id })" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-pencil"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body">
        <div class="col-md-12">
            <div class="form-horizontal">              
                <div class="form-group">
                    @Html.LabelFor(m => m.Class, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Class, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CreationTime, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.CreationTime, Constants.DateTimeFormatViewWithTimestamp, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <ul class="nav nav-tabs">
                    @{int i = 0;}
                    @foreach (var language in Model.Languages)
                    {
                        if (i == 0)
                        {
                            <li class="active">
                                <a href="#@language" data-toggle="tab">@Model.Languages[i]</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="#@language" data-toggle="tab">@Model.Languages[i]</a>
                            </li>
                        }
                        i++;
                    }
                </ul>
                <div class="tab-content">
                    @{i = 0;}
                    @foreach (var language in Model.Languages)
                    {
                        if (i == 0)
                        {                                                     
                            <div id="@language" class="tab-pane active">
                                @Html.LabelFor(m => m.Names, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Names[i], new { @class = "form-control", @readonly = "readonly" })
                            </div>

                        }
                        else
                        {                            
                            <div id="@language" class="tab-pane">
                                @Html.LabelFor(m => m.Names, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Names[i], new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        }
                        i++;
                    }
                    </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Html.DisplayNameFor(m => m.ReferenceTerms)</span>
    </div>

    <div class="panel panel-body">
        <table class="table" id="referenceTermsTable">
            <caption>@Locale.ReferenceTerms</caption>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Mnemonic)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Names)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var referenceTerm in Model.ReferenceTerms)
                {
                    <tr>
                        <td>
                            @referenceTerm.Mnemonic
                        </td>

                        <td>
                            @referenceTerm.Name
                        </td>
                    </tr>}
            </tbody>
        </table>
    </div>
</div>


@section scripts{

    <script>
        $(document).ready(function ()
        {

            $('#referenceTermsTable').DataTable();


        });
    </script>
}