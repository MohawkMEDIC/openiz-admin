@model OpenIZAdmin.Models.AssigningAuthorityModels.ViewModels.AssigningAuthorityViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.AssigningAuthority;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.View + " " + Locale.AssigningAuthority)</span>
        <div class="pull-right">
            <a href="~/AssigningAuthority/Edit?key=@Model.Key" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-edit"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })                           
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Oid, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Oid, new { @class = "form-control", @readonly = "readonly" })                           
                        </div>                        
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Url, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Url, new { @class = "form-control", @readonly = "readonly" })                          
                        </div>                        
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DomainName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.DomainName, new { @class = "form-control", @readonly = "readonly" })                       
                        </div>                        
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @readonly = "readonly" })                            
                        </div>                        
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>