@model OpenIZAdmin.Models.AssigningAuthorityModels.AssigningAuthorityViewModel
@{
    ViewBag.Title = Locale.ViewAssigningAuthority_Heading;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.ViewAssigningAuthority_Heading</span>
        <div class="pull-right">
            <a href="@Url.Action("Edit", "AssigningAuthority", new { id = Model.Id })" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-pencil"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Oid, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Oid, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Url, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Url, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DomainName, new {@class = "col-md-2 control-label"})
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.DomainName, new {@class = "form-control", @readonly = "readonly"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ValidationRegex, new {@class = "col-md-2 control-label"})
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.ValidationRegex, new {@class = "form-control", @readonly = "readonly"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.IsUnique, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.IsUnique, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new {@class = "col-md-2 control-label"})
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Description, new {@class = "form-control", @readonly = "readonly"})
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.AuthorityScope</span>
    </div>

    @Html.Partial("_AuthorityScopePartial", Model.AuthorityScopeList)
</div>

@section scripts{
    <script type="text/javascript">
            $(document).ready(function () {

                $('#authorityScopeListTable').dataTable({
                    "language":
                    {
                        "url": "/Content/datatable-locales/" + getCookie("@LocalizationConfig.LanguageCookieName") + ".json"
                    },
                    order: [],
                    columns: [
                      { "orderable": false },
                      null,
                      null,
                      null
                    ]
                });
            });
    </script>
}