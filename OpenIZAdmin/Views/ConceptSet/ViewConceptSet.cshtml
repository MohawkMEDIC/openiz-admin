@model OpenIZAdmin.Models.ConceptSetModels.ViewModels.ConceptSetViewModel
@{
    ViewBag.Title = Locale.ConceptSet;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span class="text-white">@Locale.ConceptSet @Model.Name</span>
        <div class="pull-right">
            <a href="~/ConceptSet/Edit/Edit?key=@Model.Key">
                <span class="glyphicon glyphicon-edit"></span>
                @Locale.Edit
            </a>
        </div>
    </div>
    <div class="panel panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Mnemonic, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Mnemonic, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Oid, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Oid, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Url, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CreationTime, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.CreationTime, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span>@Locale.Concepts @Locale.For @Model.Mnemonic</span>
        </h3>
    </div>
    <div class="panel panel-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Locale.ConceptClass
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Mnemonic)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var concept in Model.Concepts)
                {
                    <tr>
                        <td>
                            @concept.Class
                        </td>
                        <td>
                            @concept.Mnemonic
                        </td>
                        @if (!concept.Names.Any())
                        {
                            <td></td>
}
                        else
                        {
                            <td>@string.Join(", ", concept.Names)</td>
}
                    </tr>}
            </tbody>
        </table>
    </div>
</div>