@model OpenIZAdmin.Models.ConceptSetModels.ConceptSetViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.ConceptSet;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.View + " " + Locale.ConceptSet) @Model.Name</span>
        <div class="pull-right">
            <a href="@Url.Action("Edit", new { id = Model.Id })" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-pencil"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Mnemonic, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Mnemonic, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Oid, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Oid, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Url, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CreationTime, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.CreationTime, Constants.DateTimeFormatViewWithTimestamp, new { @class = "form-control", @readonly = "readonly" })
                </div>                
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">        
        <span class="panel-title">@Locale.Concepts @Locale.For @Model.Mnemonic</span>        
    </div>
    <div class="panel panel-body">
        <table class="table table-striped table-bordered" id="conceptListTable">
            <thead>
            <tr>
                <th>
                    @Locale.ConceptClass
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Mnemonic)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var concept in Model.Concepts)
            {
                <tr>
                    <td>
                        @concept.Class
                    </td>
                    <td>
                        @concept.Mnemonic
                    </td>
                    @if (!concept.Names.Any())
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>@string.Join(", ", concept.Names)</td>
                    }
                </tr>}
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
       $(document).ready(function () {
           
            $("#conceptListTable").DataTable();
       });
    </script>
}