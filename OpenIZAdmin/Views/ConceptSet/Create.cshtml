@model OpenIZAdmin.Models.ConceptSetModels.CreateConceptSetModel
@{
    ViewBag.Title = Locale.Create + " " + Locale.ConceptSet;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        @(Locale.Create + " " + Locale.ConceptSet)
    </div>
    <div class="panel panel-body panel-default">
        @using (Html.BeginForm("Create", "ConceptSet", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Mnemonic, new { @class = "col-md-2 control-label", title = Locale.ToolTip_ConceptMnemonic })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Mnemonic, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Mnemonic, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", title = Locale.ToolTip_ConceptName })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>                     

            <div class="form-group">
                @Html.LabelFor(m => m.Oid, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Oid, new { @class = "form-control", title = Locale.ToolTip_Oid })
                    @Html.ValidationMessageFor(m => m.Oid, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Url, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control", title = Locale.ToolTip_Url })
                    @Html.ValidationMessageFor(m => m.Url, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Locale.Submit" class="btn btn-default" title="@Locale.ToolTip_Submit"/>
                </div>
            </div>}
    </div>
</div>
