@model OpenIZAdmin.Models.AppletModels.ViewModels.AppletViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.Applet;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span class="h4">@(Locale.View + " " + Locale.Applet)</span>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Author, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Author, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Id, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Group, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Group, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                                       
                    <div class="form-group">
                        @Html.LabelFor(m => m.Version, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Version, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>  
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Assets, new { @class = "col-md-2 control-label" })                        
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.AssetCount, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>                                  
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel panel-heading">
            <span class="h4">@Locale.Assets</span>
        </div>
        <div class="panel panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-12">
                            @if (Model.Assets.Any())
                            {
                                <table class="table table-striped table-bordered" id="appletAssetTable">
                                    <thead>
                                        <tr>
                                            <th>@Locale.Name</th>
                                            <th>@Locale.MimeType</th>
                                            <th>@Locale.Language</th>                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Assets)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@item.MimeType</td>
                                                <td>@item.Language</td>                                                
                                            </tr>}

                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>@Locale.No @Locale.Assets @Locale.Found</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#appletAssetTable").DataTable();
        });
    </script>
}