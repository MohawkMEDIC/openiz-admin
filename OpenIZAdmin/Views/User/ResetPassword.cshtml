@model OpenIZAdmin.Models.UserModels.ResetPasswordModel
    @{
        ViewBag.Title = Locale.ResetPassword_Heading;
    }

    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">@Locale.ResetPassword_Heading</span>
        </div>
        <div class="panel panel-body">
            @using (Html.BeginForm("ResetPassword", "User", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(m => m.Id)

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", autocomplete = "off" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", title = Locale.ToolTip_Password })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>                

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", title = Locale.ToolTip_Password, autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="@Url.Action("Edit", new { id = Model.Id})" class="btn btn-danger">@Locale.Cancel</a>
                        <button type="submit" class="btn btn-primary" title="@Locale.ToolTip_Submit">@Locale.Submit</button>
                    </div>
                </div>}
        </div>
    </div>