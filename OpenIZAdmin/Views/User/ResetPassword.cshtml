@model OpenIZAdmin.Models.UserModels.ResetPasswordModel
    @{
        ViewBag.Title = Locale.Reset + " " + Locale.Password;
    }

    <div class="panel panel-default">
        <div class="panel panel-heading">
            <span class="text-primary h4">@(Locale.Reset + " " + Locale.Password)</span>
        </div>
        <div class="panel panel-body panel-default">
            @using (Html.BeginForm("ResetPassword", "User", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(m => m.UserId)

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", title = Locale.ToolTip_Password })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>                

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", title = Locale.ToolTip_Password })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Locale.Submit" class="btn btn-default" title="@Locale.ToolTip_Submit" />
                    </div>
                </div>}
        </div>
    </div>