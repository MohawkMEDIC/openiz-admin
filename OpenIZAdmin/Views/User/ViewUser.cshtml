        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">@Html.DisplayNameFor(m => m.Roles)</label>
                        <table class="table table-striped table-bordered" id="usersTable">
                            <thead>
                                <tr>
                                    <th>@Locale.Name</th>
                                    <th>@Locale.Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Roles)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                    </tr>}

                            </tbody>
                        </table>
                    </div>
                </div>
