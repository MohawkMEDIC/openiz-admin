@model IEnumerable<OpenIZAdmin.Models.PolicyModels.PolicyViewModel>
@{
    ViewBag.Title = Locale.Policies;
}
<div id="search-partial">
    @Html.Partial("_SearchPartial", new OpenIZAdmin.Models.SearchModel())
</div>

@section scripts{
    <script>
        $(document).ready(function ()
        {
            $.ajax({
                url: "Search?searchTerm=*",
                type: "GET",
                beforeSend: function ()
                {
                    showLoadingBar();
                },
                success: function (data)
                {
                    $("#search-results").html(data);
                },
                complete: function (e, xhr, status)
                {
                    hideLoadingBar(xhr);
                }
            });

            $('#search-partial').bind("DOMSubtreeModified", function ()
            {
                if (!$('#policiesSearchTable').length)
                    return;

                if ($.fn.DataTable.isDataTable('#policiesSearchTable'))
                    return;

                //$("#policiesSearchTable").DataTable();
                $('#policiesSearchTable').DataTable({
                    order: [],
                    columns: [
                      { "orderable": false },
                      null,
                      null,
                      null,
                      null,
                      null,
                      { "orderable": false }
                    ]
                });
            });
        });
    </script>
}