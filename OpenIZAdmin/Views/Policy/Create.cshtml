@model OpenIZAdmin.Models.PolicyModels.CreatePolicyModel
@{
    ViewBag.Title = Locale.Create + " " + Locale.Policy;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span class="h4">@(Locale.Create + " " + Locale.Policy)</span>
    </div>
    <div class="panel panel-body panel-default">
        @using (Html.BeginForm("Create", "Policy", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", title = Locale.ToolTip_PolicyName })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Grant, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.Grant, Model.GrantsList, new { @class = "form-control", title = Locale.ToolTip_Grant })
                    @Html.ValidationMessageFor(m => m.Grant, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Oid, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Oid, new { @class = "form-control", title = Locale.ToolTip_Oid })
                    @Html.ValidationMessageFor(m => m.Oid, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CanOverride, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.CheckBoxFor(m => m.CanOverride, new { title = Locale.ToolTip_PolicyCanOverride })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Locale.Submit" class="btn btn-default" title="@Locale.ToolTip_Submit"/>
                </div>
            </div>}
    </div>
</div>