@model OpenIZAdmin.Models.PolicyModels.EditPolicyModel
@{
    ViewBag.Title = Locale.Edit + " " + Locale.Policy;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        @(Locale.Edit + " " + Locale.Policy)
    </div>
    <div class="panel panel-body panel-default">
        @using (Html.BeginForm("Edit", "Policy", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(m => m.Key)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Grant, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.Grant, Model.GrantsList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Grant, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Oid, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Oid, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Oid, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CanOverride, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.CheckBoxFor(m => m.CanOverride)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="@Locale.Submit" class="btn btn-default" />
                </div>
            </div>}
    </div>
</div>

