@model OpenIZAdmin.Models.RoleModels.ViewModels.RoleViewModel
@{
    ViewBag.Title = Locale.RoleView;
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span>@Locale.Role</span>
        <div class="pull-right">
            <a href="~/Role/Edit/@Model.Id">
                <span class="glyphicon glyphicon-edit"></span>
                @Locale.Edit
            </a>
        </div>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">@Html.DisplayNameFor(m => m.Id)</label>
                        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">@Html.DisplayNameFor(m => m.Name)</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">@Html.DisplayNameFor(m => m.Description)</label>
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel panel-heading">
        <span>@Locale.Policies</span>
        <div class="pull-right">
            <a href="~/Role/Edit/@Model.Id">
                <span class="glyphicon glyphicon-edit"></span>
                @Locale.Edit
            </a>
        </div>
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        @if (Model.Policies.Any())
                        {                            
                            <table class="table table-striped table-bordered" id="rolePoliciesTable">
                                <thead>
                                    <tr>
                                        <th>@Locale.CreationTime</th>
                                        <th>@Locale.Name</th>
                                        <th>@Locale.Grant</th>
                                        <th>@Locale.IsPublic</th>
                                        <th>@Locale.Oid</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Policies)
                                    {
                                        <tr>
                                            <td>@item.CreationTime</td>
                                            <td>@item.Name</td>
                                            <td>@item.Grant</td>
                                            <td>@item.IsPublic</td>
                                            <td>@item.Oid</td>
                                        </tr>}

                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>@Locale.NoPoliciesFound</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#rolePoliciesTable").DataTable();
        });
    </script>
    }