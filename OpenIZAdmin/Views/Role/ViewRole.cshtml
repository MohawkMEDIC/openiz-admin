@model OpenIZAdmin.Models.RoleModels.ViewModels.RoleViewModel
@{
    ViewBag.Title = Locale.View + " " + Locale.Role;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@(Locale.View + " " + Locale.Role)</span>
        <div class="pull-right">
            <a href="~/Role/Edit/@Model.Id" title="@Locale.ToolTip_Edit">
                <span class="glyphicon glyphicon-edit"></span>
                <span class="text-primary h4">@Locale.Edit</span>
            </a>
        </div>
    </div>
    <div class="panel panel-body panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group form-horizontal">                        
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>                     
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", cols = "20", rows = "3", @readonly = "readonly" })
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">@Locale.Policies</span>        
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        @if (Model.Policies.Any())
                        {                            
                            <table class="table table-striped table-bordered" id="rolePoliciesTable">
                                <thead>
                                    <tr>
                                        <th>@Locale.CreationTime</th>
                                        <th>@Locale.Name</th>
                                        <th>@Locale.Grant</th>
                                        <th>@Locale.IsPublic</th>
                                        <th>@Locale.Oid</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Policies)
                                    {
                                        <tr>                                                
                                            <td>@item.CreationTime.ToString(Constants.DateTimeFormatStringWithTimestamp)</td>
                                            <td>@item.Name</td>
                                            <td>@item.Grant</td>
                                            <td>@item.IsPublic</td>
                                            <td>@item.Oid</td>
                                        </tr>}

                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>@Locale.NoPoliciesFound</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#rolePoliciesTable").DataTable();
        });
    </script>
    }