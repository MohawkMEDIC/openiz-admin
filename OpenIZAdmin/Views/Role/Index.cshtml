@model IEnumerable<OpenIZAdmin.Models.RoleModels.ViewModels.RoleViewModel>
@{
    ViewBag.Title = Locale.Roles;
}

<div id="search-partial">
    @Html.Partial("_SearchPartial", new OpenIZAdmin.Models.SearchModel())
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            $('#search-partial').bind("DOMSubtreeModified", function () {
                $("#rolesSearchTable").DataTable();
            });
        });
    </script>
    }